{
    "compilerOptions": {
        "outDir": "dist",
        "target": "ESNext",
        "module": "ESNext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "jsx": "react-native",
        "allowJs": true,
        "paths": {
        	"~lib"  : ["./lib"],
            "~lib/*": ["./lib/*"],
        }
    },
    "include": [
        "plugins", 
        "vendetta", 
        "revenge", 
        "angel",
        "lib", 
        "nexx_lib", 
        "node_modules/vendetta-types"
    ]
}
